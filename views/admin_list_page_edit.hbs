<!DOCTYPE html>

<head>
    <title>Admin Edit</title>
    <link href='admin_list_page.css' rel='stylesheet' type='text/css' />
    <link href='pass_change.css' rel='stylesheet' type='text/css' />

</head>

<body>
    {{> navbar}}

    <div id='main'>
        <div id='options'>
            <div id="parameters">
                <div id="leftbox">
                    <div>
                        <button class="purple_button" id="back_Button">Back</button>
                    </div>
                </div>
                <div id="rightbox2">
                    <div>
                        <button class="purple_button2" id="password_change">Change Password</button>
                        <br>
                        <button class="purple_button2" id="delete_button">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <div id='list'>
            <div class="providers">
                <h2 class='textentry'>id number</h2>
                <h2 class='textentry'>FirstName</h2>
                <h2 class='textentry'>LastName</h2>
            </div>
        </div>

        <div id="account_delete" class="popup">
            <div id="label">Delete account</div>
            <div id="text">Are you sure you want to delete this account?</div>
            <button class="purple_button confirmbutton" id="del_confirm">Confirm</button>
            <button class="purple_button cancelbutton" id="del_cancel">Cancel</button>
        </div>

        <div id="passchange" class="popup">
            <div id="label">Change Password</div>
            <div id="loginbox">
                <form id="leftside">
                    <input class="inputbox loginelements" type="text" name="Email" placeholder="Old Password" />
                    <input class="inputbox loginelements" type="text" name="Email" placeholder="New Password" />
                    <input class="inputbox loginelements" type="text" name="Email" placeholder="Retype New Password" />
                    <input class="purple_button confirmbutton" id="pass_confirm" type="submit" value="confirm" />
                </form>
                <div id="rightside">
                    <button class="purple_button cancelbutton" id="pass_cancel">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <script src="admin_edit.js"></script>

</body>