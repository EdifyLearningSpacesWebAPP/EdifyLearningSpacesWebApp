<!DOCTYPE html>
<head>
    <title>Admins</title>
    <link href='adminEdit.css' rel='stylesheet' type='text/css'/>
</head>

<body>
	{{> navbar_logout}}
	<div id='main'>
		<div id ='options'>
            <div id="parameters">
                <div id="leftbox">
                    <form method='GET' action='admin_list'>
                        <input class="purple_button" type="submit" value="Back"/>
                    </form>
                </div>
                <div id="rightbox2">
                        <button id="password_change" class="purple_button2" type="submit" value="Change Password">Change password</button>
                        <br>
                        <button id="delete_button" class="purple_button2" type="submit" value="Delete">Delete account</button>
                </div>
            </div>    
        </div>

    <div id='main'>
        <div id='header'>
            <form class='row' method='get' action='/admin_list'>
                <input id='back' class='purple_button' type='submit' value='back'/>
            </form>
            <div class='row'>
                <button class='purple_button' type='button' onclick='deleteAdmin()'>Delete Admin</button>
                <button class='purple_button' type='submit' onclick='getInputs()'>Change Password</button>
            </div>
            <div class='row'>
                <h2 class='id'>Id number</h2>
                <h2 class='fname'>First name</h2>
                <h2 class='lname'>Last name</h2>
            </div>
        </div>

        <div id='list'>
            <div class='providers' method='GET' action='admin_edit'>
                <h2 class='id'>{{userData.id}}</h2>
                <h2 class='fname'>{{userData.firstName}}</h2>
                <h2 class='lname'>{{userData.lastName}}</h2>
            </div>
        </div>

    </div>
        <div id="account_delete" class="popup">
        <div id="label">Delete account</div>
        <div id="text">Are you sure you want to delete this account?</div>
        <button class="purple_button confirmbutton" id="del_confirm">Confirm</button>
        <button class="purple_button cancelbutton" id="del_cancel">Cancel</button>
    </div>
    <script src="admin_edit.js"></script>
</body>
